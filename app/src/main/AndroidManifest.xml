<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.rudolfhladik.tmobile.prototype">

    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:allowBackup"

        >
        <activity
            android:name="com.rudolfhladik.tmobile.prototype.activities.MainActivity"
            android:screenOrientation="portrait"
            />

        <activity
            android:name=".activities.LoginActivity"
            android:label="Carboola"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.RideActivity"
            android:label="Ride"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".activities.SpotifyNotifyActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".activities.CarStateActivity"
            android:label="Car state"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".activities.SelectCarActivity"
            android:label="Select car"
            android:screenOrientation="portrait"
            />
    </application>

</manifest>